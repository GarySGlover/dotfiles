# UK Keyboard
input * {
    xkb_layout gb
}

# Monitor config using kanshi
exec kanshi

## Key Mapping
# Primary modifier key
set $S Mod4
set $M Mod1
set $C control
set $s shift

### Old sway config
# Reload the configuration file
bindsym $S+$s+c reload
# Exit sway (logs you out of your Wayland session)
bindsym $S+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'

# Default programs
set $term kitty
set $menu dmenu_path | rofi -dmenu -no-match -p "Select program: " | xargs swaymsg exec --
set $app_launcher fuzzel

# Global Bindings
bindsym $S+a exec $app_launcher
bindsym $S+n exec nwg-displays
bindsym $S+d exec $menu
bindsym $S+Return exec $term
bindsym $S+Shift+q kill
bindsym $S+r exec hyprshot -m region

## Wallpapers
output * bg /run/current-system/sw/share/backgrounds/sway/Sway_Wallpaper_Blue_1920x1080.png fill

# Brightness Control
bindsym XF86MonBrightnessUp exec brightnessctl set +10%
bindsym XF86MonBrightnessDown exec brightnessctl set 10%-

# Audio Control
bindsym XF86AudioMute exec wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
bindsym XF86AudioRaiseVolume exec wpctl set-volume -l 1.5 @DEFAULT_AUDIO_SINK@ 5%+
bindsym XF86AudioLowerVolume exec wpctl set-volume -l 1.5 @DEFAULT_AUDIO_SINK@ 5%-

# Select Windows
bindsym $S+h focus left
bindsym $S+j focus down
bindsym $S+k focus up
bindsym $S+l focus right

# Move windows
bindsym $S+$s+h move left
bindsym $S+$s+j move down
bindsym $S+$s+k move up
bindsym $S+$s+l move right

# Switch to workspace
bindsym $S+1 exec wm-workspace-switch 1
bindsym $S+2 exec wm-workspace-switch 2
bindsym $S+3 exec wm-workspace-switch 3
bindsym $S+4 exec wm-workspace-switch 4
bindsym $S+5 exec wm-workspace-switch 5
bindsym $S+6 exec wm-workspace-switch 6
bindsym $S+7 exec wm-workspace-switch 7
bindsym $S+8 exec wm-workspace-switch 8
bindsym $S+9 exec wm-workspace-switch 9
bindsym $S+0 exec wm-workspace-switch 10
bindsym $S+F1 exec wm-workspace-switch F1
bindsym $S+F2 exec wm-workspace-switch F2
bindsym $S+F3 exec wm-workspace-switch F3
bindsym $S+F4 exec wm-workspace-switch F4
bindsym $S+F5 exec wm-workspace-switch F5
bindsym $S+F6 exec wm-workspace-switch F6
bindsym $S+F7 exec wm-workspace-switch F7
bindsym $S+F8 exec wm-workspace-switch F8
bindsym $S+F9 exec wm-workspace-switch F9
bindsym $S+F10 exec wm-workspace-switch F10
bindsym $S+F11 exec wm-workspace-switch F11
bindsym $S+F12 exec wm-workspace-switch F12
# Move focused container to workspace
bindsym $S+Shift+1 move container to workspace number 1; workspace number 1
bindsym $S+Shift+2 move container to workspace number 2; workspace number 2
bindsym $S+Shift+3 move container to workspace number 3; workspace number 3
bindsym $S+Shift+4 move container to workspace number 4; workspace number 4
bindsym $S+Shift+5 move container to workspace number 5; workspace number 5
bindsym $S+Shift+6 move container to workspace number 6; workspace number 6
bindsym $S+Shift+7 move container to workspace number 7; workspace number 7
bindsym $S+Shift+8 move container to workspace number 8; workspace number 8
bindsym $S+Shift+9 move container to workspace number 9; workspace number 9
bindsym $S+Shift+0 move container to workspace number 10; workspace number 10
bindsym $S+Shift+F1 move container to workspace F1; workspace F1
bindsym $S+Shift+F2 move container to workspace F2; workspace F2
bindsym $S+Shift+F3 move container to workspace F3; workspace F3
bindsym $S+Shift+F4 move container to workspace F4; workspace F4
bindsym $S+Shift+F5 move container to workspace F5; workspace F5
bindsym $S+Shift+F6 move container to workspace F6; workspace F6
bindsym $S+Shift+F7 move container to workspace F7; workspace F7
bindsym $S+Shift+F8 move container to workspace F8; workspace F8
bindsym $S+Shift+F9 move container to workspace F9; workspace F9
bindsym $S+Shift+F10 move container to workspace F10; workspace F10
bindsym $S+Shift+F11 move container to workspace F11; workspace F11
bindsym $S+Shift+F12 move container to workspace F12; workspace F12

# Split direction
bindsym $S+b splith
bindsym $S+v splitv

# Switch the current container between different layout styles
bindsym $S+s layout stacking
bindsym $S+w layout tabbed
bindsym $S+e layout toggle split

# Make the current focus fullscreen
bindsym $S+f fullscreen

# Toggle the current focus between tiling and floating mode
bindsym $S+$s+space floating toggle

# Swap focus between the tiling area and the floating area
bindsym $S+space focus mode_toggle

bar {
    position top

    # status_command while date +'%Y-%m-%d %X'; do sleep 1; done
    status_command wm-bar

    colors {
        statusline #ffffff
        background #323232
        inactive_workspace #32323200 #32323200 #5c5c5c
    }
}

# Import the most important environment variables into the D-Bus and systemd
# user environments (e.g. required for screen sharing and Pinentry prompts):
exec dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK XDG_CURRENT_DESKTOP





### Idle configuration
#
# Example configuration:
#
# exec swayidle -w \
#          timeout 300 'swaylock -f -c 000000' \
#          timeout 600 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \
#          before-sleep 'swaylock -f -c 000000'
#
# This will lock your screen after 300 seconds of inactivity, then turn off
# your displays after another 300 seconds, and turn your screens back on when
# resumed. It will also lock your screen before your computer goes to sleep.
